<%= form_with(model: room) do |form| %>
  <% if room.errors.any? %>
    <div style="
      margin-bottom:1.25rem;
      padding:1rem;
      border-radius:10px;
      background:rgba(248,113,113,0.15);
      border:1px solid rgba(248,113,113,0.4);
      color:#fca5a5;
    ">
      <h2 style="
        margin:0 0 0.5rem 0;
        font-size:1rem;
        font-weight:600;
      ">
        <%= pluralize(room.errors.count, "error") %> prohibited this room from saving
      </h2>
      <ul style="margin:0; padding-left:1.25rem;">
        <% room.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div style="margin-bottom:1rem;">
    <%= form.label :name, style: "display:block; margin-bottom:0.25rem; color:#cbd5f5;" %>
    <%= form.text_field :name, style: "
      width:100%;
      padding:0.6rem 0.75rem;
      border-radius:8px;
      border:1px solid #1f2937;
      background:#020617;
      color:#e5e7eb;
    " %>
  </div>

  <div style="margin-bottom:1rem;">
    <%= form.label :capacity, style: "display:block; margin-bottom:0.25rem; color:#cbd5f5;" %>
    <%= form.number_field :capacity, style: "
      width:100%;
      padding:0.6rem 0.75rem;
      border-radius:8px;
      border:1px solid #1f2937;
      background:#020617;
      color:#e5e7eb;
    " %>
  </div>

  <div>
    <%= form.submit "Save Room", style: "
      padding:0.6rem 1.25rem;
      border-radius:10px;
      border:1px solid #38bdf8;
      background:rgba(56,189,248,0.15);
      color:#38bdf8;
      font-weight:600;
      cursor:pointer;
    " %>
  </div>
<% end %>
